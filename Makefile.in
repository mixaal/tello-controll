CC=@CC@
#CC=@CXX@
FLAGS=-O2 -ggdb -pedantic -Wall -Werror -Wno-deprecated-declarations  @CFLAGS@
NO_PEDANTIC_FLAGS=-O2 -ggdb -Wall -Werror -Wno-deprecated-declarations 
RM=rm -f
OBJECTS=tello.o main.o utils.o decoder.o sdl.o joy.o wifi_scan.o console.o  # wireless.o 
MAIN=tello_control
LIBS=@LIBS@


all: $(OBJECTS)
	$(CC) $(OBJECTS) -o $(MAIN) $(LIBS) @LDFLAGS@

wireless.o: wireless.c
	$(CC) $(FLAGS) -Wno-stringop-truncation -c -o $@ $<

wifi_scan.o: wifi_scan.c
	$(CC) $(NO_PEDANTIC_FLAGS) -c -o $@ $<

console.o: console.c
	$(CC) $(FLAGS) -c -o $@ $<


joy.o: joy.c
	$(CC) $(FLAGS) -c -o $@ $<

decoder.o: decoder.c
	$(CC) $(FLAGS) -c -o $@ $<

sdl.o: sdl.c
	$(CC) $(FLAGS) -c -o $@ $<

utils.o: utils.c
	$(CC) $(FLAGS) -c -o $@ $<

tello.o: tello.c
	$(CC) $(FLAGS) -c -o $@ $<

main.o: main.c
	$(CC) $(FLAGS) -c -o $@ $<


clean:
	$(RM) $(OBJECTS) $(MAIN)
